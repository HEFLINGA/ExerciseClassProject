@model ExerciseProgram.Domain.Concrete.Exercise

<div class="well">
    <h3>
        <strong>@Model.Name</strong>
        <span class="pull-right label label-primary">@Model.ExerciseMax</span>
        <strong class="pull-right">Exercise 5 Rep Max: </strong>
    </h3>

    @using (Html.BeginForm("PlateWeight", "Plate"))
    {
        <div class="pull-right">
            @Html.HiddenFor(x => x.ExerciseMax)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
            <input type="submit" class="btn btn-success" value="Check Plates" />
        </div>
    }
    <span class="lead"> @Model.Description</span>
</div> 